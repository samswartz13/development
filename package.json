{
  "name": "SamSwartz",
  "version": "1.0.0",
  "description": "",
  "main": "",
  "scripts": {
    "start": "concurrently --kill-others \"npm run watch\" \"live-server\"",
    "scss": "node-sass -o assets/css assets/scss/styles.scss && autoprefixer",
    "autoprefixer": "postcss -u autoprefixer -r assets/css/*",
    "cssmin": "cleancss -o assets/css/styles.min.css assets/css/styles.css",
    "uglify": "uglifyjs -o assets/js/script.min.js assets/js/script-compiled.js",
    "compilejs": "babel assets/js/script.js --out-file assets/js/script-compiled.js",
    "imagemin": "imagemin --out-dir=dist/assets/images assets/images/**/*.{png,jpg,gif}",
    "build:css": "npm run scss && npm run cssmin",
    "build:js": "npm run compilejs && npm run uglify",
    "build:img": "npm run imagemin",
    "build:clean": "del dist/*",
    "build:copy": "copyfiles  -e 'assets/scss/**/*.*' -e 'assets/images/**/*.*' 'assets/**/*.*' index.html favicon.ico dist/",
    "build": "npm run build:clean && npm run build:css && npm run build:js && npm run build:img && npm run build:copy",
    "watch:css": "onchange 'assets/scss/**/*.scss' -- npm run scss",
    "watch:js": "onchange 'assets/js/script.js' -- npm run compilejs",
    "watch": "npm-run-all --parallel watch:*"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^8.4.1",
    "babel-cli": "^6.26.0",
    "clean-css-cli": "^4.1.11",
    "concurrently": "^3.5.1",
    "copyfiles": "^2.0.0",
    "del-cli": "^1.1.0",
    "imagemin-cli": "^3.0.0",
    "node-sass": "^4.9.0",
    "npm-run-all": "^4.1.3",
    "onchange": "^3.3.0",
    "postcss-cli": "^5.0.0",
    "uglify-js": "^3.3.23"
  },
  "dependencies": {}
}
